{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": true,
		"forceConsistentCasingInFileNames": false,
		"noFallthroughCasesInSwitch": false,
		"paths": {
			"@artifacts/*": ["src/artifacts/*"],
			"@custom-exceptions/*": ["src/custom-exceptions/*"],
			"@database/*": ["src/database/*"],
			"@dtos/*": ["src/dtos/*"],
			"@entities/*": ["src/entities/*"],
			"@graphql_resolvers/*": ["src/graphql_resolvers/*"],
			"@graphql_routers/*": ["src/graphql_routers/*"],
			"@graphql_services/*": ["src/graphql_services/*"],
			"@interceptors/*": ["src/interceptors/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@rest_controllers/*": ["src/rest_controllers/*"],
			"@rest_routers/*": ["src/rest_routers/*"],
			"@rest_services/*": ["src/rest_services/*"]
		}
	}
}
