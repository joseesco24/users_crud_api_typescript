{
	"name": "users_crud_api_typescript",
	"version": "0.0.0",
	"description": "A really simple CRUD GraphQL API based on Docker and TypeScript.",
	"author": {
		"email": "josed.escobar@outlook.com",
		"name": "joseesco24"
	},
	"readme": "readme.md",
	"_moduleAliases": {
		"@artifacts": "./dist/artifacts",
		"@custom-exceptions": "./dist/custom-exceptions",
		"@database": "./dist/database",
		"@dtos": "./dist/dtos",
		"@entities": "./dist/entities",
		"@graphql_resolvers": "./dist/graphql_resolvers",
		"@graphql_routers": "./dist/graphql_routers",
		"@graphql_services": "./dist/graphql_services",
		"@interceptors": "./dist/interceptors",
		"@middlewares": "./dist/middlewares",
		"@rest_controllers": "./dist/rest_controllers",
		"@rest_routers": "./dist/rest_routers",
		"@rest_services": "./dist/rest_services"
	},
	"scripts": {
		"format": "prettier --config ./.prettierrc.json --write \"src/**/*.ts\"",
		"lint": "eslint --config ./.eslintrc.json \"src/**/*.ts\" --fix",
		"test": "jest --setupFiles dotenv/config --silent=false",
		"commitmsg": "bash hooks/commit-msg.sh",
		"precommit": "bash hooks/pre-commit.sh",
		"postinstall": "npx husky install",
		"start-dev": "nest start --watch",
		"start-app": "node dist/main",
		"prebuild": "rimraf dist",
		"build": "nest build"
	},
	"dependencies": {
		"@apollo/client": "^3.8.7",
		"@apollo/server": "^4.9.5",
		"@as-integrations/fastify": "^2.1.1",
		"@nestia/core": "^2.3.9",
		"@nestia/sdk": "^2.3.9",
		"@nestjs/apollo": "^12.0.11",
		"@nestjs/cli": "^10.2.1",
		"@nestjs/common": "^10.2.8",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.2.8",
		"@nestjs/graphql": "^12.0.11",
		"@nestjs/platform-express": "^10.2.8",
		"@nestjs/platform-fastify": "^10.2.8",
		"axios": "^1.6.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"graphql": "^16.8.1",
		"helmet": "^7.1.0",
		"joi": "^17.11.0",
		"module-alias": "^2.2.3",
		"nestia": "^5.0.3",
		"nestjs-cls": "^3.6.0",
		"pg": "^8.11.3",
		"pino": "^8.16.2",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^5.0.5",
		"rxjs": "^7.8.1",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.2",
		"@commitlint/config-conventional": "^18.4.2",
		"@nestjs/schematics": "^10.0.3",
		"@nestjs/testing": "^10.2.8",
		"@types/express": "^4.17.21",
		"@types/jest": "29.5.8",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^20.9.0",
		"@types/pg": "^8.10.9",
		"@types/supertest": "^2.0.16",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"pino-pretty": "^10.2.3",
		"prettier": "^3.1.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.2.2"
	},
	"jest": {
		"coverageDirectory": "../coverage",
		"testRegex": ".*\\.spec\\.ts$",
		"testEnvironment": "node",
		"rootDir": "src",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"moduleFileExtensions": [
			"json",
			"js",
			"ts"
		],
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		]
	}
}