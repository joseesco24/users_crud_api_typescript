{
	"name": "users_crud_api_typescript",
	"_moduleAliases": {
		"@artifacts": "./dist/artifacts",
		"@controllers": "./dist/controllers",
		"@database": "./dist/database",
		"@dtos": "./dist/dtos",
		"@entities": "./dist/entities",
		"@interceptors": "./dist/interceptors",
		"@middlewares": "./dist/middlewares",
		"@rest_routers": "./dist/rest_routers",
		"@services": "./dist/services"
	},
	"scripts": {
		"format": "prettier --ignore-path ./.prettierignore --config ./.prettierrc.json --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-path ./.eslintignore --config ./.eslintrc.json \"src/**/*.ts\" --fix",
		"postinstall": "npx husky install",
		"start-dev": "nest start --watch",
		"start-app": "node dist/main",
		"prebuild": "rimraf dist",
		"build": "nest build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run format . && git add -A . && npm run lint",
			"commit-msg": "npx commitlint --edit"
		}
	},
	"dependencies": {
		"@nestjs/axios": "^2.0.0",
		"@nestjs/common": "^9.3.3",
		"@nestjs/config": "^2.3.0",
		"@nestjs/core": "^9.3.3",
		"@nestjs/jwt": "^10.0.1",
		"@nestjs/mapped-types": "^1.2.2",
		"@nestjs/passport": "^9.0.1",
		"@nestjs/platform-express": "^9.3.3",
		"@nestjs/swagger": "^6.2.1",
		"@nestjs/typeorm": "^9.0.1",
		"axios": "^1.3.2",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"helmet": "^6.0.1",
		"husky": "^8.0.3",
		"joi": "^17.7.0",
		"module-alias": "^2.2.2",
		"moment": "^2.29.4",
		"npm": "^9.4.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.9.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^4.1.2",
		"rxjs": "^7.8.0",
		"swagger-ui-express": "^4.6.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@nestjs/cli": "^9.2.0",
		"@nestjs/schematics": "^9.0.4",
		"@nestjs/testing": "^9.3.3",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "29.4.0",
		"@types/module-alias": "^2.0.1",
		"@types/moment": "^2.13.0",
		"@types/node": "^18.11.19",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/pg": "^8.6.6",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.4.1",
		"prettier": "^2.8.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^4.9.5"
	},
	"jest": {
		"coverageDirectory": "../coverage",
		"testRegex": ".*\\.spec\\.ts$",
		"testEnvironment": "node",
		"rootDir": "src",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"moduleFileExtensions": [
			"json",
			"js",
			"ts"
		],
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		]
	}
}